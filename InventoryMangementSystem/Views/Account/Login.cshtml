
@model InventoryMangementSystemEntities.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AccountLayout";
}


                    
                    <form asp-action="Login">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="login-userheading">
        <h3>Sign In</h3>
        <h4>Please login to your account</h4>
    </div>
                        <div class="form-login">
                            <label asp-for="UserName" class="control-label">Username</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <div class="form-addons">
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Enter your username or email address" autocomplete="off" />
                                <img src="~/img/icons/mail.svg" alt="img">
                            </div>
                        </div>
                        <div class="form-login">

                            <label asp-for="Password" class="control-label">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="pass-group">
                                <input type="password" asp-for="Password" class="pass-input" placeholder="Enter your password" autocomplete="off" />
                                <span class="fas toggle-password fa-eye-slash"></span>
                            </div>
                        </div>
                        <div class="form-group form-check mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>
                        <div class="form-login">
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    <div class="signinform text-center">
        <h4>Don’t have an account? <a asp-area="" asp-controller="Account" asp-action="Register" class="hover-a">Sign Up</a></h4>
                    </div>
                    </form>



                