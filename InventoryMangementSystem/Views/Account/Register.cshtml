@using InventoryMangementSystemEntities.ViewModels.Account
@model RegisterViewModel

@{
    ViewData["Title"] = "Add New User";
}

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>User Management</h4>
                <h6>Add/Update User</h6>
            </div>
        </div>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card">
            <div class="card-body">
                <div class="row">

                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <div class="form-addons">
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Enter username" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="form-addons">
                            <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email address" />
                        </div>
                        </div>

                    </div>
                  
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            <div class="form-addons">
                                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                            </div>
                        </div>
                    </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Roles" class="control-label"></label>
                                <span asp-validation-for="Roles" class="text-danger"></span>
                                <select asp-for="Roles" class="select" asp-items="@(new SelectList(ViewBag.Roles))" multiple>
                                </select>
                            </div>
                        </div>

                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">

                        <label asp-for="Password" class="control-label">
                            Password
                        </label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="pass-group">
                            <input type="password" asp-for="Password" class="pass-input" placeholder="Enter Password" />
                            <span class="fas toggle-password fa-eye-slash"></span>

                        </div>
                        </div>

                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">
                            Confirm Password
                        </label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <div class="pass-group">
                            <input type="password" asp-for="ConfirmPassword" class="pass-input" placeholder="Confirm Password" />
                            <span class="fas toggle-password fa-eye-slash"></span>
                        </div>
                        </div>
                    </div>
                    <div class="col-lg-12">

                            <input type="submit" value="Submit" class="btn btn-submit me-2" />
                            <a asp-area="" asp-controller="Administration" asp-action="GetAllUsers" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}