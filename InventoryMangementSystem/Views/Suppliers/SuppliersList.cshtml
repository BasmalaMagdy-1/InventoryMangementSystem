@model IEnumerable<InventoryMangementSystemEntities.Models.Supplier>

@{
    ViewData["Title"] = "SuppliersList";
}



<div class="page-wrapper">
    <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h4>Supplier List</h4>
                <h6>Manage your Supplier</h6>
            </div>
            <div class="page-btn">
                <a asp-action="Create" class="btn btn-added"><img src="~/img/icons/plus.svg" alt="img">Add Supplier</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                       
                        <div class="search-input">
                            <a class="btn btn-searchset"><img src="~/img/icons/search-white.svg" alt="img"></a>
                        </div>
                    </div>
          
                </div>

                
                <div class="table-responsive">
                    <table class="table datanew">
                        <thead>
                            <tr>
                                <th>
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>Supplier Name</th>
                                <th>Phone</th>
                                <th>email</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>
                                    <td class="productimgname">
                                        <a href="javascript:void(0);">@item.SupplierName</a>
                                    </td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>

                                        <a href="@Url.Action("Details", "Suppliers", new { id = item.Id })" class="me-3">
                                            <img src="~/img/icons/eye.svg" alt="Details" />
                                        </a>
                                        <a href="@Url.Action("Edit", "Suppliers", new { id = item.Id })" class="me-3">
                                            <img src="~/img/icons/edit.svg" alt="img">
                                        </a>

                                        <a href="@Url.Action("Delete", "Suppliers", new { id = item.Id })">
                                            <img src="~/img/icons/delete.svg" alt="img">
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
