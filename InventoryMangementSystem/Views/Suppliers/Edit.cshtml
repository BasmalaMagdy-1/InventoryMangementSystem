@model InventoryMangementSystemEntities.Models.Supplier

@{
    ViewData["Title"] = "Edit Supplier Details";
}

<div class="page-wrapper">
        <div class="container">
        <div class="page-header">
            <div class="page-title">
                <h4>Supplier Management</h4>
                <h6>Edit/Update Supplier</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">

                            <label asp-for="SupplierName" class="control-label">SupplierName</label>
                            <input asp-for="SupplierName" class="form-control" />
                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">

                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">

                            <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
         
                        </div>
                    </div>
                    <div class="col-lg-9 col-12">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Address</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                   
                    <div class="col-lg-12">
                        <input type="submit" value="Update" class="btn btn-submit me-2" />
                        <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                    </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
