@model InventoryMangementSystemEntities.Models.Supplier

@{
    ViewData["Title"] = "Delete supplier";
}


<div class="page-wrapper">
    <div class="container">

    <div class="page-header">
        <div class="page-title">
            <h4>
                Are you sure you want to delete this supplier?
            </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="productdetails">
                        <ul class="product-bar">
                            <li>
                                <h4>Supplier Name</h4>
                                <h6>@Model.SupplierName</h6>
                            </li>
                            <li>
                                <h4>Supplier Email</h4>
                                <h6>@Model.Email</h6>
                            </li>
                            <li>
                                <h4>Supplier PhoneNumber</h4>
                                <h6>@Model.PhoneNumber</h6>
                            </li>
                            <li>
                                <h4>Supplier Address</h4>
                                <h6>@Model.Address</h6>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <form asp-action="Delete">
    <div class="col-lg-12">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-area="" asp-controller="Suppliers" asp-action="index" class="btn btn-primary">Cancel</a>
    </div>
    </form>

   
</div>
</div>